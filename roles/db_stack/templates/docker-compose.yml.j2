services:
  postgres:
    image: {{ postgres_image }}
    container_name: {{ db_stack_project_name }}_postgres
    restart: unless-stopped
    env_file:
      - .env
    environment:
      POSTGRES_DB: "{{ postgres_db }}"
      POSTGRES_USER: "{{ postgres_user }}"
      # Force md5 auth at init time (important for PgBouncer md5 auth)
      POSTGRES_INITDB_ARGS: "--auth-host=md5 --auth-local=md5"
    volumes:
      - "{{ db_stack_project_dir }}/data/postgres:/var/lib/postgresql/data"
    networks:
      - db_net
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -h 127.0.0.1 -p 5432 -U {{ postgres_user }} -d {{ postgres_db }} || exit 1"]
      interval: 5s
      timeout: 3s
      retries: 20
      start_period: 10s

  pgbouncer:
    image: {{ pgbouncer_image }}
    container_name: {{ db_stack_project_name }}_pgbouncer
    env_file:
      - .env
    restart: unless-stopped
    depends_on:
      postgres:
        condition: service_healthy
    ports:
      - "127.0.0.1:{{ pgbouncer_listen_port }}:6432"
    volumes:
      - "{{ db_stack_project_dir }}/pgbouncer/pgbouncer.ini:/etc/pgbouncer/pgbouncer.ini:ro"
      - "{{ db_stack_project_dir }}/pgbouncer/userlist.txt:/etc/pgbouncer/userlist.txt:ro"
    networks:
      - db_net
    healthcheck:
      # pg_isready does not require credentials for a basic "accepting connections" check
      test: ["CMD-SHELL", "PGPASSWORD=$POSTGRES_PASSWORD pg_isready -h 127.0.0.1 -p 6432 -U {{ postgres_user }} -d {{ postgres_db }} || exit 1"]
      interval: 5s
      timeout: 3s
      retries: 20
      start_period: 5s

networks:
  db_net:
    name: {{ db_stack_project_name }}_db_net
    driver: bridge
